@model Product
@{
    ViewData["Title"] = "Details";
}
  
<hr />
<div class="row">
    <div class="col-sm-12 col-md-4">
        <img class="d-block w-100" src="@Html.DisplayFor(model => model.Image)" alt="@Model.Name">
    </div>
    <div class="col-sm-12 col-md-8">
        <h2>@Model.Name</h2>
        <p>@Model.Category</p>
        <p>@Model.Description</p>
        <h4>@(Model.Price.HasValue ? Model.Price.Value.ToString("C") : "No Price")</h4>
        <form method="post">
            <input asp-for="ID" type="hidden" />
            <select name="quantity" class="form-control-sm mr-2">
                @for (int i = 1; i < 11; i++)
                {
                    <option value="@i">@i</option>
                }
            </select>
            <input type="submit" class="btn btn-primary" value="Add to Cart" />
        </form>
    </div>
</div>
<p class="mt-5">
    <a asp-action="Index" class="btn btn-primary">Browse More Products</a>
</p>

