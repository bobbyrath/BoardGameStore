@model Product
@{
    ViewData["Title"] = "Details";
}
  
<hr />
<div class="row">
    <div class="col-sm-12 col-md-4">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="@Html.DisplayFor(model => model.Image)" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="@Html.DisplayFor(model => model.Image)" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="@Html.DisplayFor(model => model.Image)" alt="Third slide">
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-12 col-md-8">
        <h2>@Model.Name</h2>
        <p>@Model.Description</p>
        <h4>@(Model.Price.HasValue ? Model.Price.Value.ToString("C") : "No Price")</h4>
        <form method="post">
            <input asp-for="ID" type="hidden" />
            <select name="quantity">
                @for (int i = 1; i < 11; i++)
                {
                    <option value="@i">@i</option>
                }
            </select>
            <input type="submit" class="btn btn-primary" value="Add to Cart" />
        </form>
    </div>
</div>
