@*Razor comments do not get spit out into the resulting HTML*@
@*Polymorphism - List/Array*@
@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}

@* Razor *@

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-sm-12 col-md-6">
            <h3>@product.Name</h3>
            <img class="img-fluid" src="@product.Image" alt="@product.Name" />
            <p>@product.Description</p>
            <p>@product.Category</p>
            <h4>@(product.Price.HasValue? product.Price.Value.ToString("C") : "No price")</h4>
            @* Option 1: Use Razor in your HREF attribute 
            <a class="btn btn-primary" href="/Product/Details/@product.ID">View this product</a>
             Option 2: Use Razor tag helpers to generate the HREF *@
            <a class="btn btn-primary" asp-controller="Product" asp-action="Details" asp-route-id="@product.ID">View this product</a>
        </div>
    }
</div>