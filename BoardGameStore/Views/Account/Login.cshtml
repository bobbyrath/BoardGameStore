
@{
    ViewData["Title"] = "Login";
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(m => m.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>

}

<h2 class="text-center">Login</h2>
<form method="post" class="login">
    <div class="form-group">
        <label for="username">User Name</label>
        <input name="username" class="form-control" type="text" placeholder="Enter your username..." />
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input name="password" class="form-control" type="password" placeholder="Enter your password..." />
    </div>
    <input type="submit" class="btn btn-primary login-button" />
</form>
<p class="text-center new">New to BoardGameHub?</p>

<form class="register">
    <a class="btn btn-light register-button" asp-action="Register">Register</a>
</form>

