@{
    ViewData["Title"] = "Home Page";
}

<h1 class="text-center">Welcome to BoardGameHub</h1>
<p class="text-center">Your one stop shop for <a asp-controller="Product" asp-action="Index">buying</a> 
    and <a asp-controller="Trade" asp-action="Index">trading</a> board games</p>
<div id="carouselExampleFade" class="carousel slide carousel-fade" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <a asp-controller="Product" asp-action="Details" asp-route-id="10"><img class="d-block w-100" src="~/images/mansions.jpg" alt="First slide"></a>
        </div>
        <div class="carousel-item">
            <a asp-controller="Product" asp-action="Details" asp-route-id="1"><img class="d-block w-100" src="~/images/agricola.jpg" alt="Second slide"></a>
        </div>
        <div class="carousel-item">
            <a asp-controller="Product" asp-action="Details" asp-route-id="3"> <img class="d-block w-100" src="~/images/betr.jpg" alt="Third slide"></a>
        </div>
        <div class="carousel-item">
            <a asp-controller="Product" asp-action="Details" asp-route-id="9"> <img class="d-block w-100" src="~/images/car.jpg" alt="Fourth slide"></a>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleFade" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleFade" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
