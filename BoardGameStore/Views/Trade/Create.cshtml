@model BoardGameStore.Models.InventoryItem

@{
    ViewData["Title"] = "Create";
}

<h2>Add new item</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsTradeable" /> Check if willing to trade
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<p class="lead">
    <a class="btn btn-primary" asp-action="Inventory">View Inventory</a>
    <a class="btn btn-primary" asp-action="Find">Find Trade</a>
</p>       


